    "props": {
      "orientation": "vertical"
    },
    "children": [ "rich-text#question2r" ]
  },
  "rich-text#question2r":{
    "props":{
      "text": "Para fazer uma compra em nosso site é muito fácil, rápido, e seguro. Temos uma forma bem simples e auto-explicativa de compra.Em caso de dúvidas, basta entrar em contato conosco."
    }
  },

  // PERGUNTA 3
  "menu-item#question3": {
    "props": {
      "itemProps": {
        "text": "Como acompanharei o pedido?"
      }
