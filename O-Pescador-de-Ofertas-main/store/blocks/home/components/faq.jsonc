{
  
  "vtex.menu@2.x:menu#faq-home": {
    "props": {
      "orientation": "vertical",
      "blockClass": "faq-home"
    },
    "children": [
        "rich-text#title-faq",
        "menu-item#question1",
        "menu-item#question2",
        "menu-item#question3",
        "menu-item#question4"
    ]
  },

  "rich-text#title-faq": { 
    "props":{
      "text": "PERGUNTAS FREQUENTES",
      "blockClass": "title-faq"
    }
