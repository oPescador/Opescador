  "rich-text#question1r":{
    "props":{
      "text": "O prazo de aprovação do pagamento varia de acordo com a opção escolhida, no caso dos boletos bancários, por exemplo, a aprovação pode levar até 2 dias úteis."
    }
  },

  // PERGUNTA 2
  "menu-item#question2": {
    "props": {
      "itemProps": {
        "text": "Como efetuar uma compra?"
      }
